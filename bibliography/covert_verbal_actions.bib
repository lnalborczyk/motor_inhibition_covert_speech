@article{bart_decay_2021,
  title = {Decay of Inhibition in Motor Imagery},
  author = {Bart, Victoria K. E. and Koch, Iring and Rieger, Martina},
  year = {2021},
  month = jan,
  journal = {Quarterly Journal of Experimental Psychology},
  volume = {74},
  number = {1},
  pages = {77--94},
  issn = {1747-0218, 1747-0226},
  doi = {10.1177/1747021820949388},
  abstract = {During motor imagery, global inhibition and effector-specific inhibition contribute to prevent actual movements. We investigated the decay of inhibition using an action-mode switching paradigm. Participants switched between imagined and executed hand movements. Response\textendash stimulus intervals (RSIs) were varied (200, 700, 1,300, and 2,000\,ms). As inhibition (due to imagination) or activation (due to execution) in one trial affects performance in the subsequent trial, we analysed sequential effects. Evidence for the contribution of global inhibition (e.g., switch benefits in execution [E]\textemdash imagination [I] sequences compared with I-I sequences) and effector-specific inhibition (e.g., hand repetition costs after an imagination trial) was observed. Sequential effects decreased with increasing RSIs, indicating that both forms of inhibition are subject to decay. However, the decrease of sequential effects was less pronounced for global inhibition than for effector-specific inhibition. This indicates that global inhibition may decay slowly, whereas effector-specific inhibition decays rather quickly. In conclusion, global inhibition may be at least partly implemented in all contexts in which motor imagery has to be performed, whereas effector-specific inhibition may contribute to motor imagery only as soon as the exact movement parameters are known and may decay quickly after the imagined movement has been performed.},
  langid = {english}
}

